<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/tool_bar" />

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/find"
        android:layout_below="@id/toolBar"
        android:background="#FFFFFF" >

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/border_button_selector"
            android:minHeight="70dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="@string/close"
            android:textColor="@color/yellow_text_selector"
            android:textSize="22sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/close"
            android:layout_alignParentTop="true" >

            <RelativeLayout
                android:id="@+id/idDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp" >

                <TextView
                    android:id="@+id/idHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/find_id"
                    android:textColor="#9a9aff"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idHeading"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:textColor="#4d4dff"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nameDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idDetails"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp" >

                <TextView
                    android:id="@+id/nameHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/name"
                    android:textColor="#9a9aff"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/findName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nameHeading"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:textColor="#4d4dff"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/emailDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameDetails"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp" >

                <TextView
                    android:id="@+id/emailHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/email"
                    android:textColor="#9a9aff"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/findEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailHeading"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:textColor="#4d4dff"
                    android:textSize="22sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>